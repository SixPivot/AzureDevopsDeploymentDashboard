{
    "name": "hackday-22-azdo",
    "description": "HackDay 22 Release Dashboard",
    "author": "SixPivot",
    "scripts": {
        "clean": "rimraf ./dist ./out",
        "compile": "npm run clean && webpack --mode production",
        "compile:dev": "npm run clean && webpack --mode development",
        "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
        "check": "npx tsc --noEmit",
        "package": "npm run compile && tfx extension create --manifest-globs vss-extension.json --overrides-file configs/release.json --output-path out",
        "package:dev": "npm run compile:dev && tfx extension create --manifest-globs vss-extension.json --overrides-file configs/dev.json --output-path out",
        "publish": "npm run compile && tfx extension publish --manifest-globs vss-extension.json --overrides-file configs/release.json --output-path out",
        "publish:dev": "npm run compile:dev && tfx extension publish --manifest-globs vss-extension.json --overrides-file configs/dev.json --output-path out",
        "start:dev": "webpack-dev-server --mode development",
        "tfx-create": "tfx extension create --manifest-globs vss-extension.json",
        "prettier-write": "prettier --write '**/*.{js,ts,jsx,tsx,css,scss,htm,html}'",
        "prettier-check": "prettier --check '**/*.{js,ts,jsx,tsx,css,scss,htm,html}'"
    },
    "dependencies": {
        "azure-devops-extension-api": "^4.239.0",
        "azure-devops-extension-sdk": "^4.0.2",
        "azure-devops-ui": "^2.241.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@testing-library/dom": "^10.3.2",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^12.1.5",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "@types/react": "^16.8.18",
        "@types/react-dom": "^16.8.4",
        "@typescript-eslint/eslint-plugin": "^7.16.1",
        "@typescript-eslint/parser": "^7.16.1",
        "base64-inline-loader": "^2.0.1",
        "copy-webpack-plugin": "^5.0.3",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "file-loader": "^6.2.0",
        "jest": "^29.7.0",
        "jest-dom": "^4.0.0",
        "jest-environment-jsdom": "^29.7.0",
        "nerdbank-gitversioning": "^3.6.65-alpha",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "sass": "^1.77.8",
        "sass-loader": "^14.2.1",
        "style-loader": "^4.0.0",
        "tfx-cli": "^0.17.0",
        "ts-jest": "^29.2.3",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.3",
        "vss-web-extension-sdk": "^5.141.0",
        "webpack": "^5.93.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "engines": {
        "npm": ">=8",
        "node": ">=16"
    }
}
