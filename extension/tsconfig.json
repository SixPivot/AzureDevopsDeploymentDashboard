{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["esnext", "dom", "dom.iterable"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src/",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["react", "vss-web-extension-sdk", "jest"]
    },
    "include": ["src"]
}
